<div class="container">
    <h1>Movies Details</h1>
    <hr>
    <div class="row ">

        <div class="mb-4 col-12 col-md-4">
            <img class="mb-2" src="{{image}}" alt="">
        </div>

        <div class="mb-4 col-12 col-md-8">
            <h1> <strong> {{title}} </strong></h1>
            <h2> <strong> {{director}} </strong></h2>
            <p> {{description}} </p>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            {{#each showtimes}}
            {{this}} |
            {{/each}}
        </div>

    </div>
    <hr>
    <a href="/" class="btn btn-dark">Ir a Home</a>
    <a href="/movies" class="btn btn-dark">Ir a Movies</a>
</div>